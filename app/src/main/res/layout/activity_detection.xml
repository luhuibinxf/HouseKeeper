<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.feicui.app.phone.activity.DetectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <ProgressBar
            android:id="@+id/m_detection_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="10"
            android:max="100"
            android:progressDrawable="@drawable/progress_de_bar" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:background="@color/burlywood" />

        <TextView
            android:id="@+id/m_detection_pb_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp" />

    </LinearLayout>

    <View style="@style/Tableview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <View style="@style/Tableview" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/m_detection_iv_0"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/notification_information_progress_green"
                android:src="@mipmap/setting_info_icon_version" />

            <TextView
                android:id="@+id/m_detection_tv_a_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/m_detection_iv_0"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/m_detection_tv_b_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m_detection_tv_a_0"
                android:layout_toRightOf="@+id/m_detection_iv_0"
                android:textSize="15sp" />
        </RelativeLayout>

        <View style="@style/Tableview" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/m_detection_iv_1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/notification_information_progress_red"
                android:src="@mipmap/setting_info_icon_space" />

            <TextView
                android:id="@+id/m_detection_tv_a_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/m_detection_iv_1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/m_detection_tv_b_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m_detection_tv_a_1"
                android:layout_toRightOf="@+id/m_detection_iv_1"
                android:textSize="15sp" />
        </RelativeLayout>

        <View style="@style/Tableview" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/m_detection_iv_2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/notification_information_progress_yellow"
                android:src="@mipmap/setting_info_icon_cpu" />

            <TextView
                android:id="@+id/m_detection_tv_a_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/m_detection_iv_2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/m_detection_tv_b_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m_detection_tv_a_2"
                android:layout_toRightOf="@+id/m_detection_iv_2"
                android:textSize="15sp" />
        </RelativeLayout>

        <View style="@style/Tableview" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/m_detection_iv_3"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/notification_information_progress_green"
                android:src="@mipmap/setting_info_icon_camera" />

            <TextView
                android:id="@+id/m_detection_tv_a_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/m_detection_iv_3"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/m_detection_tv_b_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m_detection_tv_a_3"
                android:layout_toRightOf="@+id/m_detection_iv_3"
                android:textSize="15sp" />
        </RelativeLayout>

        <View style="@style/Tableview" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/m_detection_iv_4"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/notification_information_progress_yellow"
                android:src="@mipmap/setting_info_icon_root" />

            <TextView
                android:id="@+id/m_detection_tv_a_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/m_detection_iv_4"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/m_detection_tv_b_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m_detection_tv_a_4"
                android:layout_toRightOf="@+id/m_detection_iv_4"
                android:textSize="15sp" />
        </RelativeLayout>

        <View style="@style/Tableview" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
