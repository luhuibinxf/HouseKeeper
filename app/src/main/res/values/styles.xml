<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 软件管理TextView样式 -->
    <style name="SoftwareitemText">
        <item name="android:contentDescription">软件管理TextView样式</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Softwareitem" parent="SoftwareitemText">
        <item name="android:layout_alignParentEnd" tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:layout_alignParentRight">true</item>

    </style>
</resources>
